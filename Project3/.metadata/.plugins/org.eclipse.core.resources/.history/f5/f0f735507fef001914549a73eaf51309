package com.revdoc.service.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;

import com.revdoc.dao.DoctorDAO;
import com.revdoc.model.Specialty;
import com.revdoc.service.SpecialtyService;


public class SpecialtyServiceImpl implements SpecialtyService {
	@Autowired
	private SpecialtyDAO specialtyDAO;
	public SpecialtyServiceImpl() {
		// EMPTY CONSTRUCTOR BUSINESS STANDARD
	}
	
	@Override
	public Doctor createDoctor(Doctor doctor) {
		return doctorDAO.save(doctor);
	}

	@Override
	public void deleteDoctor(long npi) {
		doctorDAO.deleteById(npi);		
	}

	@Override
	public Doctor updateDoctor(Doctor doctor) {
		return doctorDAO.save(doctor);
	}

	@Override
	public List<Doctor> getAllDoctors() {
		return doctorDAO.findAll();
	}

	@Override
	public Doctor getDoctorByNpi(long npi) {
		return doctorDAO.findByNpi(npi);
	}

	@Override
	public Specialty createSpecialty(Specialty specialty) {
		return doctorDAO.save(doctor);
	}

	@Override
	public void deleteSpecialty(long specialtyId) {
		doctorDAO.deleteById(npi);	
		
	}

	@Override
	public Specialty updateSpecialty(Specialty specialty) {
		return doctorDAO.save(doctor);
	}

	@Override
	public List<Specialty> getAllSpecialties() {
		return doctorDAO.findAll();
	}

	@Override
	public Specialty getSpecialtyByspecialtyId(long specialtyId) {
		return doctorDAO.findByNpi(npi);
	}

}
